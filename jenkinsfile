pipeline {
    agent any

    tools{
        jdk 'jdk21'
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url:'https://github.com/1ms24mc111/devop.git'
                echo "From git pipeline started"
            }
        }
        stage('Build') {
            steps {
                sh 'javac hello.java'
            }
        }
        stage('Run') {
            steps {
                sh 'java hello'
            }
        }
    }
}
